if [ "${OS}" = "WINDOWS" ] ; then
	export GHCUP_INSTALL_BASE_PREFIX="$CI_PROJECT_DIR"
	export GHCUP_BIN="$CI_PROJECT_DIR/ghcup/bin"
	export PATH="$GHCUP_BIN:$CI_PROJECT_DIR/.local/bin:$PATH"
	export TMPDIR="$CI_PROJECT_DIR/tmp"
else
	export GHCUP_INSTALL_BASE_PREFIX="$CI_PROJECT_DIR"
	export GHCUP_BIN="$CI_PROJECT_DIR/.ghcup/bin"
	export PATH="$GHCUP_BIN:$CI_PROJECT_DIR/.local/bin:$PATH"
	export TMPDIR="$CI_PROJECT_DIR/tmp"
fi
